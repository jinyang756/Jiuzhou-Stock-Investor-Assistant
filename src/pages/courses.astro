---
import Layout from '../layouts/Layout.astro';
// 模拟数据 - 实际应用中将从数据库或API获取
const courses = [
  { id: 1, title: '股票入门基础知识', duration: '3:25', level: '初级', views: '1.2万', image: '/assets/course1.jpg' },
  { id: 2, title: 'K线图技术分析实战', duration: '4:10', level: '中级', views: '8.5千', image: '/assets/course2.jpg' },
  { id: 3, title: 'MACD指标精准应用', duration: '3:45', level: '中级', views: '6.7千', image: '/assets/course3.jpg' },
  { id: 4, title: '成交量分析技巧', duration: '3:15', level: '初级', views: '5.3千', image: '/assets/course4.jpg' },
  { id: 5, title: '如何捕捉涨停板', duration: '4:30', level: '高级', views: '9.2千', image: '/assets/course5.jpg' },
  { id: 6, title: '价值投资实战指南', duration: '5:10', level: '高级', views: '7.8千', image: '/assets/course6.jpg' },
];
---

<Layout>
	<section class="py-8 md:py-12">
		<h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">投资课程</h1>
		<p class="text-gray-600 mb-8">
			3分钟短视频课程，从入门到精通，快速掌握投资技巧
		</p>

		<!-- 课程分类 -->
		<div class="bg-white rounded-xl shadow-md p-6 mb-8">
			<div class="flex overflow-x-auto pb-2 gap-4 hide-scrollbar">
				<button class="whitespace-nowrap px-4 py-2 bg-blue-600 text-white rounded-lg font-medium">全部课程</button>
				<button class="whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-colors">初级课程</button>
				<button class="whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-colors">中级课程</button>
				<button class="whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-colors">高级课程</button>
				<button class="whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-colors">技术分析</button>
				<button class="whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-colors">价值投资</button>
			</div>
		</div>

		<!-- 课程列表 -->
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
			{courses.map((course) => (
				<div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
					<div class="relative h-48 bg-gray-200">
						<!-- 课程封面图占位 -->
						<div class="absolute inset-0 flex items-center justify-center bg-gray-300">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</div>
						<!-- 课程时长 -->
						<div class="absolute bottom-2 right-2 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded">
							{course.duration}
						</div>
					</div>
					<div class="p-5">
						<div class="flex items-center mb-2">
							<span class={`text-xs px-2 py-1 rounded-full mr-2 ${course.level === '初级' ? 'bg-green-100 text-green-800' : course.level === '中级' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800'}`}>
								{course.level}
							</span>
							<span class="text-xs text-gray-500 flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
								</svg>
								{course.views}
							</span>
						</div>
						<h3 class="text-lg font-semibold text-gray-800 mb-2 line-clamp-2">{course.title}</h3>
						<a href={`/courses/${course.id}`} class="inline-block text-blue-600 font-medium hover:text-blue-800 transition-colors mt-2">
							观看课程 →
						</a>
					</div>
				</div>
			))}
		</div>

		<!-- 分页 -->
		<div class="flex justify-center">
			<nav class="flex items-center space-x-1">
				<button class="px-3 py-2 rounded-md text-sm font-medium text-gray-500 bg-white border border-gray-300 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
					上一页
				</button>
				<button class="px-3 py-2 rounded-md text-sm font-medium bg-blue-600 text-white border border-blue-600">
					1
				</button>
				<button class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50">
					2
				</button>
				<button class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50">
					3
				</button>
				<span class="px-3 py-2 text-sm font-medium text-gray-500">...</span>
				<button class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50">
					10
				</button>
				<button class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50">
					下一页
				</button>
			</nav>
		</div>

		<!-- 转化区域 -->
		<div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-xl shadow-lg p-8 text-white text-center mt-12">
			<h2 class="text-2xl font-bold mb-4">获取全套投资课程</h2>
			<p class="mb-6 max-w-2xl mx-auto">
				添加客服微信，免费领取价值998元的《股票投资实战课程》大礼包
			</p>
			<div class="flex justify-center">
				<a href="#contact" class="bg-white text-blue-700 px-8 py-3 rounded-lg font-medium hover:bg-blue-50 transition-colors shadow-md">
					立即添加客服
				</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hide-scrollbar {
		scrollbar-width: none;
		-ms-overflow-style: none;
	}
	.hide-scrollbar::-webkit-scrollbar {
		display: none;
	}
	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
</style>