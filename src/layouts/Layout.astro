---
import ParticleBg from '../components/common/ParticleBg.astro';
import RiskAlert from '../components/common/RiskAlert.astro';
import FloatingButton from '../components/common/FloatingButton.astro';
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - 九州股民助手</title>
  <style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;
    body { background: #0f172a; color: white; }
  </style>
</head>
<body>
  <ParticleBg />
  <nav class="bg-black/50 backdrop-blur-md py-4 px-6">
    <div class="container mx-auto flex justify-between">
      <h1 class="text-2xl font-bold text-blue-400">九州股民助手</h1>
      <div class="flex gap-4"><a href="/" class="hover:text-blue-400">首页</a></div>
    </div>
  </nav>
  <main class="container mx-auto px-4 py-8 relative z-10">
    <slot />
  </main>
  <RiskAlert />
  <FloatingButton />
  <script src="https://plugin-code.salesmartly.com/js/project_421738_433927_1754978662.js"></script>
  <script src="https://plugin-code.salesmartly.com/js/project_421782_433976_1754981147.js"></script>
</body>
</html>
