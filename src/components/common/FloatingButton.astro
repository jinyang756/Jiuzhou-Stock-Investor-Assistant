<button id="customer-service-btn" class="fixed bottom-8 right-8 bg-blue-600 hover:bg-blue-700 text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg transition-all duration-300 hover:scale-110 z-50" aria-label="联系客服">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
  </svg>
</button>

<script>
  // 等待页面加载完成
  document.addEventListener('DOMContentLoaded', function() {
    const serviceBtn = document.getElementById('customer-service-btn');
    // 添加点击事件
    serviceBtn.addEventListener('click', function() {
      // 尝试打开客服聊天窗口
      if (window.Salesmartly) {
        window.Salesmartly.openChat();
      } else {
        // 如果客服脚本尚未加载，显示提示
        alert('客服系统加载中，请稍候再试');
      }
    });
  });
</script>

<style>
  /* 添加动画效果 */
  button {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
    }
  }
</style>