---

// 定义股票数据类型
interface Stock {
  code: string;
  name: string;
  pe: number;
  turnover: number;
  marketCap: 'large' | 'mid' | 'small';
  industry: string;
}
---

<div class="bg-white rounded-lg shadow-lg p-6 mb-8">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">A股指标筛选工具</h2>
  
  <!-- 合规声明 -->
  <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
    <p class="text-sm text-yellow-700">
      【合规提示】本工具仅基于公开市场数据进行指标筛选，不构成任何投资建议。股票投资需自主决策，风险自担。
    </p>
  </div>
  
  <!-- 筛选条件 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">市盈率（PE）</label>
      <select id="pe-filter" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        <option value="all">全部</option>
        <option value="0-20">0-20（低估值）</option>
        <option value="20-50">20-50（合理估值）</option>
        <option value="50+">50+（高估值）</option>
      </select>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">换手率（近5日）</label>
      <select id="turnover-filter" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        <option value="all">全部</option>
        <option value="3%+">3%+（高换手）</option>
        <option value="1-3%">1-3%（中等换手）</option>
        <option value="1%-">1%以下（低换手）</option>
      </select>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">市值</label>
      <select id="market-cap-filter" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        <option value="all">全部</option>
        <option value="large">大盘股（500亿+）</option>
        <option value="mid">中盘股（100-500亿）</option>
        <option value="small">小盘股（100亿以下）</option>
      </select>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">行业</label>
      <select id="industry-filter" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        <option value="all">全部行业</option>
        <option value="信息技术">信息技术</option>
        <option value="消费">消费</option>
        <option value="金融">金融</option>
        <option value="制造业">制造业</option>
        <option value="医药生物">医药生物</option>
      </select>
    </div>
  </div>
  
  <div class="flex justify-center mb-6">
    <button id="filter-btn" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
      筛选股票池
    </button>
  </div>
  
  <!-- 数据来源声明 -->
  <div class="text-xs text-gray-500 mb-4">
    数据来源：公开市场信息整理，仅供参考 | 最后更新时间：2025-08-11
  </div>
  
  <!-- 筛选结果 -->
  <div id="result-container" class="mt-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-3">筛选结果（仅展示代码和名称）</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-200">
        <thead>
          <tr class="bg-gray-50">
            <th class="py-3 px-4 border-b text-left text-xs font-medium text-gray-500 uppercase tracking-wider">股票代码</th>
            <th class="py-3 px-4 border-b text-left text-xs font-medium text-gray-500 uppercase tracking-wider">股票名称</th>
            <th class="py-3 px-4 border-b text-left text-xs font-medium text-gray-500 uppercase tracking-wider">市盈率</th>
            <th class="py-3 px-4 border-b text-left text-xs font-medium text-gray-500 uppercase tracking-wider">换手率(%)</th>
            <th class="py-3 px-4 border-b text-left text-xs font-medium text-gray-500 uppercase tracking-wider">行业</th>
          </tr>
        </thead>
        <tbody id="result-list" class="divide-y divide-gray-200">
          <!-- 结果将通过JS动态生成 -->
          <tr>
            <td colspan="5" class="py-4 px-4 text-center text-gray-500">请选择筛选条件并点击筛选按钮</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  // 初始化筛选逻辑
  document.addEventListener('DOMContentLoaded', () => {
    // 获取股票数据
    const stocks = JSON.parse(JSON.stringify(import.meta.globEager('../data/stock-basic.json')['../data/stock-basic.json'].default));
    
    // 获取DOM元素并添加类型断言
    const filterBtn = document.getElementById('filter-btn') as HTMLButtonElement | null;
    const resultList = document.getElementById('result-list') as HTMLTableSectionElement | null;
    
    // 筛选按钮点击事件 - 添加空值检查
    if (filterBtn && resultList) {
      filterBtn.addEventListener('click', () => {
      // 获取筛选条件
      const peFilter = (document.getElementById('pe-filter') as HTMLSelectElement | null)?.value || 'all';
      const turnoverFilter = (document.getElementById('turnover-filter') as HTMLSelectElement | null)?.value || 'all';
      const marketCapFilter = (document.getElementById('market-cap-filter') as HTMLSelectElement | null)?.value || 'all';
      const industryFilter = (document.getElementById('industry-filter') as HTMLSelectElement | null)?.value || 'all';
      
      // 执行筛选
      const filteredStocks = stocks.filter((stock: { pe: number; turnover: number; marketCap: string; industry: string; }) => {
        // 市盈率筛选
        if (peFilter === '0-20' && (stock.pe < 0 || stock.pe > 20)) return false;
        if (peFilter === '20-50' && (stock.pe < 20 || stock.pe > 50)) return false;
        if (peFilter === '50+' && stock.pe < 50) return false;
        
        // 换手率筛选
        if (turnoverFilter === '3%+' && stock.turnover < 3) return false;
        if (turnoverFilter === '1-3%' && (stock.turnover < 1 || stock.turnover > 3)) return false;
        if (turnoverFilter === '1%-' && stock.turnover > 1) return false;
        
        // 市值筛选
        if (marketCapFilter !== 'all' && stock.marketCap !== marketCapFilter) return false;
        
        // 行业筛选
        if (industryFilter !== 'all' && stock.industry !== industryFilter) return false;
        
        return true;
      });
      
      // 显示筛选结果
      if (filteredStocks.length === 0) {
        resultList.innerHTML = `
          <tr>
            <td colspan="5" class="py-4 px-4 text-center text-gray-500">未找到匹配的股票，请调整筛选条件</td>
          </tr>
        `;
        return;
      }
      
      // 生成结果表格行
      resultList.innerHTML = filteredStocks.map((stock: { code: any; name: any; pe: number; turnover: number; industry: any; }) => `
        <tr class="hover:bg-gray-50 transition">
          <td class="py-3 px-4">${stock.code}</td>
          <td class="py-3 px-4">${stock.name}</td>
          <td class="py-3 px-4">${stock.pe.toFixed(2)}</td>
          <td class="py-3 px-4">${stock.turnover.toFixed(2)}</td>
          <td class="py-3 px-4">${stock.industry}</td>
        </tr>
      `).join('');
    });
  }
});
</script>
